{
  "name": "dream-motion",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm --workspace apps/web run dev",
    "build": "npm --workspace packages/runtime run build && npm --workspace apps/web run build",
    "typecheck": "npm --workspace apps/web run typecheck",
    "export-runtime": "npm --workspace packages/runtime run build"
  },
  "devDependencies": {
    "esbuild": "^0.27.2",
    "typescript": "^5.6.3"
  }
}
